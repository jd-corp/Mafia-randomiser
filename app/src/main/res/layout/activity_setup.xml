<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".SetupActivity" android:orientation="horizontal">

    <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp" android:layout_below="@+id/roleNameText" android:id="@+id/list">
    </android.support.v7.widget.RecyclerView>
    <TextView
            android:text="@string/role_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:id="@+id/roleNameText"
            android:textSize="24sp" android:layout_marginTop="20dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:text="@string/number_of_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberOfText" android:textSize="24sp"
            android:layout_marginTop="20dp" android:layout_marginBottom="0dp"
            android:layout_alignBottom="@+id/roleNameText"
            android:layout_toEndOf="@id/roleNameText"
            android:layout_alignParentTop="true" android:layout_marginStart="70dp" android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"/>
    <Button
            android:text="@string/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submitButton" android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true" android:layout_below="@+id/list" android:onClick="onSubmit"/>
</RelativeLayout>