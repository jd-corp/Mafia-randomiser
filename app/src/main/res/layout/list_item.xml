<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:labelFor="@id/inputNum1"
            android:ems="10"
            android:id="@+id/inputNum1"
            android:width="50dp" android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp" android:layout_toEndOf="@+id/inputRole1"
            android:layout_marginStart="30dp" android:layout_alignParentEnd="true"
            tools:ignore="Autofill"
            android:layout_alignParentTop="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:ignore="Autofill"
            android:labelFor="@id/inputRole1"
            android:layout_marginStart="16dp" android:id="@+id/inputRole1" android:layout_marginTop="8dp"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"/>
</RelativeLayout>